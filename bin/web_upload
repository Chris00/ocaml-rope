#!/bin/sh

SRC_WEB=web
WEB=rope.forge.ocamlcore.org:/home/groups/rope/htdocs

if [ -d doc ] ; then
    scp -r doc/ $WEB	&& echo "*** Published documentation on OCamlForge"
fi
FILES=$SRC_WEB/*.html
if [ "$1" = "--all" ]; then
    FILES="$FILES $SRC_WEB/*.png LICENSE"
fi
if [ -d "$SRC_WEB" ]; then
    scp $FILES $WEB && echo "*** Published web site ($SRC_WEB/) on OCamlForge"
fi
